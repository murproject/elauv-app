<?xml version='1.0' encoding='utf-8'?>
<widget id="org.robocenter.elementaryauv" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ElementaryAUV</name>
    <description>Companion app for ElementaryAUV underwater vehicle</description>
    <author email="support@murproject.com" href="https://murproject.com">
        ООО "Центр робототехники", г. Владивосток.
    </author>

    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <access origin="*" />
    <allow-navigation href="*"/>

    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />

    <icon src="../src/assets/icon.png" platform="android" width="512" height="512" density="mdpi" />

    <splash src="../src/assets/splash.png" density="land-hdpi" />
    <splash src="../src/assets/splash.png" density="land-ldpi" />
    <splash src="../src/assets/splash.png" density="land-mdpi" />
    <splash src="../src/assets/splash.png" density="land-xhdpi" />
    <splash src="../src/assets/splash.png" density="land-xxhdpi" />
    <splash src="../src/assets/splash.png" density="land-xxxhdpi" />
    <splash src="../src/assets/splash.png" density="port-hdpi" />
    <splash src="../src/assets/splash.png" density="port-ldpi" />
    <splash src="../src/assets/splash.png" density="port-mdpi" />
    <splash src="../src/assets/splash.png" density="port-xhdpi" />
    <splash src="../src/assets/splash.png" density="port-xxhdpi" />
    <splash src="../src/assets/splash.png" density="port-xxxhdpi" />

    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,root,downloads" />

    <platform name="electron">
        <preference name="ElectronSettingsFilePath" value="../src/electron.json" />
    </platform>

    <platform name="android">
        <config-file parent="/manifest" target="AndroidManifest.xml" xmlns:android="http://schemas.android.com/apk/res/android">
            <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
            <uses-permission android:name="android.permission.BLUETOOTH" />
        </config-file>

        <!-- <preference name="android-manifest/@android:requestLegacyExternalStorage" value="true" /> -->

