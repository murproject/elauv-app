<?xml version='1.0' encoding='utf-8'?>
<widget id="org.robocenter.gamemurlite" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GameMUR LiteApp</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <access origin="*" />
    <allow-navigation href="*"/>

    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="Fullscreen" value="true" />

    <icon src="../src/assets/icon.png" platform="android" width="512" height="512" density="mdpi" />

    <splash src="../src/assets/splash.png" density="land-hdpi" />
    <splash src="../src/assets/splash.png" density="land-ldpi" />
    <splash src="../src/assets/splash.png" density="land-mdpi" />
    <splash src="../src/assets/splash.png" density="land-xhdpi" />
    <splash src="../src/assets/splash.png" density="land-xxhdpi" />
    <splash src="../src/assets/splash.png" density="land-xxxhdpi" />
    <splash src="../src/assets/splash.png" density="port-hdpi" />
    <splash src="../src/assets/splash.png" density="port-ldpi" />
    <splash src="../src/assets/splash.png" density="port-mdpi" />
    <splash src="../src/assets/splash.png" density="port-xhdpi" />
    <splash src="../src/assets/splash.png" density="port-xxhdpi" />
    <splash src="../src/assets/splash.png" density="port-xxxhdpi" />
</widget>
